@page "/faq"
<h3>Задайте свой вопрос: </h3>


<div>
    <input @bind="message" placeholder="Введите сообщение" />
    <button @onclick="SendMessage">Отправить</button>
</div>

<div>
    <h4>Сообщения</h4>
    <ul>
        @for (int i = 0; i < messages.Count; i++)
        {
            <li>
                @if (i != editingIndex)
                {
                    <span>@messages[i]</span>
                    <button @onclick="() => EditMessage(i)">Редактировать</button>
                }
                else
                {
                    <input @bind="messages[i]" />
                    <button @onclick="SaveMessage">Сохранить</button>
                }
            </li>
        }
    </ul>
</div>

@code {
    private string message = "";
    private List<string> messages = new List<string>();
    private int editingIndex = -1;

    private void SendMessage()
    {
        if (editingIndex != -1)
        {
            editingIndex = -1;
        }
        else
        {
            if (!string.IsNullOrWhiteSpace(message))
            {
                messages.Add(message);
            }
        }

        message = "";
    }

    private void EditMessage(int index)
    {
        editingIndex = index;
    }

    private void SaveMessage()
    {
        editingIndex = -1;
    }
}
